                {{{ hentTekst (concat key "." value ".infotekst.tekst") }}}
                {{#hvisTekstFinnes (concat key "." value ".infotekst.tekst2")}}
                    <div>
                        {{{ hentTekst (concat key "." value ".infotekst.tekst2") }}}
                    </div>
                {{/hvisTekstFinnes}}
                {{#hvisTekstFinnes (concat key "." value ".infotekst.tekst3")}}
                    <div>
                        {{{ hentTekst (concat key "." value ".infotekst.tekst3") }}}
                    </div>
                {{/hvisTekstFinnes}}
        {{/hvisTekstFinnes}}
    </div>
{{/if}}
