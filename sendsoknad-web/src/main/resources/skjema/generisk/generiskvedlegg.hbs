<h2>{{ hentTekst "oppsummering.vedlegg.tittel" }}</h2>
{{#if @root.utvidetSoknad}}
<p>
    <ul>
        <li>
            {{{hentTekst "vedlegg.info1"}}}
        </li>
        <li>
            {{{hentTekst "vedlegg.info2"}}}
        </li>
        <li>
            {{{hentTekst "vedlegg.info3"}}}
        </li>
    </ul>
</p>
{{/if}}
<ul class="vedlegg-liste">
    {{#forVedlegg}}

        <li
            {{#hvisLik innsendingsvalg "LastetOpp"}}
            class="lastet-opp"
            {{ else }}
            class="ikke-lastet-opp"
            {{/hvisLik}}
        >
            <div>
                <p class="tittel">{{ tittel }}</p>
                {{#if navn}}
                    <p class="navn">{{ navn }}</p>
                {{/if}}
                {{#if @root.utvidetSoknad }}
                   <div class="hjelpeInfotekst">
                        <h3>Hjelpetekst</h3>
                        <p>{{{hentTekst (vedleggCmsNokkel this)}}}</p>
                    </div>
                {{/if}}

                {{#hvisLik innsendingsvalg "LastetOpp"}}
                    <span class="lastetOpp">
                                <span class="vedleggSymbol"></span>
                                {{#if @root.utvidetSoknad}}
                                    <span>{{ hentTekst "oppsummering.vedlegg.dokument"}}</span>
                                {{/if }}
                                <span class="antallSider">
                                    <span>{{ antallSider }}</span>
                                    {{#hvisLik antallSider "1"}}
                                        <span>{{ hentTekst "oppsummering.side" }}</span>
                                    {{ else }}
                                        <span>{{ hentTekst "oppsummering.sider" }}</span>
                                    {{/hvisLik}}

                                </span>
                                <a href="#/visVedlegg/{{ vedleggId }}"
                                   class="seVedlegg">{{ hentTekst "oppsummering.seVedlegg" }}</a>
                            </span>
                {{else}}
                    {{#if @root.utvidetSoknad }}
                        <h3>{{ hentTekst "vedlegg.faktum.andreInnsendingsvalg" }}</h3>
                    {{/if}}

                    {{#hvisLik innsendingsvalg "SendesSenere"}}
                        <span class="status">{{ hentTekst "oppsummering.sendesSenere" }}</span>
                    {{/hvisLik}}

                    {{#hvisLik innsendingsvalg "SendesIkke"}}
                        <span class="status">{{ hentTekst "oppsummering.sendesIkkeSendesAvAndre" }}</span>
                    {{/hvisLik}}

                    {{#hvisLik innsendingsvalg "VedleggSendesIkke"}}
                        <span class="status">{{ hentTekst "oppsummering.sendesIkke" }}</span>
                    {{/hvisLik}}

                    {{#hvisLik innsendingsvalg "VedleggSendesAvAndre"}}
                        <span class="status">{{ hentTekst "oppsummering.sendesAvAndre" }}</span>
                    {{/hvisLik}}

                    {{#hvisLik innsendingsvalg "VedleggAlleredeSendt"}}
                        <span class="status">{{ hentTekst "oppsummering.vedleggAlleredeSendt" }}</span>
                        {{#variabel "key" "vedlegg.faktum.vedleggalleredesendt"}}
                            {{#variabel "niva" "3"}}
                                {{> skjema/generisk/infotekst}}
                            {{/variabel}}
                        {{/variabel}}

                    {{/hvisLik}}

                    {{#hvisLik innsendingsvalg "VedleggSendesIkke"}}
                        {{#if @root.utvidetSoknad }}
                            <h4>{{ hentTekst "vedlegg.behandlet.sendesIkke.fritekst.sporsmal" }}</h4>
                        {{/if}}
                        <p class="aarsak">{{ aarsak }}</p>
                    {{/hvisLik}}

                    {{#hvisLik innsendingsvalg "VedleggAlleredeSendt"}}
                        {{#if @root.utvidetSoknad }}
                            <h4>{{ hentTekst "vedlegg.behandlet.alleredeSendt.fritekst.sporsmal" }}</h4>
                        {{/if}}
                        <p class="aarsak">{{ aarsak }}</p>
                    {{/hvisLik}}

                    {{#hvisLik innsendingsvalg "VedleggSendesAvAndre"}}
                        {{#if aarsak}}
                            {{#if @root.utvidetSoknad }}
                                <h4>{{ hentTekst "vedlegg.behandlet.sendesAvAndre.fritekst.sporsmal" }}</h4>
                            {{/if}}
                            <p class="aarsak">{{ aarsak }}</p>
                        {{/if}}

                    {{/hvisLik}}

                    {{#hvisLik innsendingsvalg "SendesSenere"}}
                        {{#if aarsak}}
                            {{#if @root.utvidetSoknad }}
                                <h4>{{ hentTekst "vedlegg.behandlet.sendesSenere.fritekst.sporsmal" }}</h4>
                            {{/if}}
                             <p class="aarsak">{{ aarsak }}</p>
                        {{/if}}
                    {{/hvisLik}}
                {{/hvisLik}}
            </div>
        </li>

    {{else}}
        <li class="lastet-opp">{{ hentTekst "oppsummering.vedlegg.ingen" }}</li>
    {{/forVedlegg}}
</ul>
