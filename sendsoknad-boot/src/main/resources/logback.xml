<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <springProfile name="!local">
        <!-- Secure log config -->
        <appender name="secureLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>/secure-logs/secure.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
                <fileNamePattern>/secure-logs/secure.log.%i</fileNamePattern>
                <minIndex>1</minIndex>
                <maxIndex>1</maxIndex>
            </rollingPolicy>
            <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
                <maxFileSize>50MB</maxFileSize>
            </triggeringPolicy>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
        </appender>
        <logger name="secureLogger" level="INFO" additivity="false">
            <appender-ref ref="secureLog"/>
        </logger>

        <property name="loggingPattern" value="%d [%-5level] [%thread] %logger{5} %replace(- [%X{consumerId}, %X{callId}, %X{userId}] ){'- \[, , \] ',''}- %m%n"/>

        <appender name="STDOUT_JSON" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <includeMdcKeyName>callId</includeMdcKeyName>
                <includeMdcKeyName>behandlingsId</includeMdcKeyName>
            </encoder>
        </appender>

        <logger name="org.apache" level="${log.level.org.apache:-INFO}" />
        <logger name="ch.qos.logback" level="${log.level.ch.qos.logback:-INFO}" />
        <logger name="org.springframework" level="${log.level.org.springframework:-WARN}" />

        <logger name="io" level="INFO"/>
        <logger name="org" level="INFO"/>
        <logger name="com" level="INFO"/>
        <logger name="no.nav" level="INFO"/>
        <logger name="no.nav.modig" level="ERROR"/>
        <logger name="no.nav.sbl" level="INFO"/>
        <logger name="no.nav.sbl.dialogarena.soknadinnsending.business" level="INFO"/>

        <logger name="no.nav.sbl.dialogarena.common.cxf.CXFMaskSAMLTokenLoggingOutInterceptor" level="OFF"/>
        <logger name="org.apache.cxf" level="OFF"/>
        <logger name="org.apache.http.client.protocol.ResponseProcessCookies" level="ERROR"/>
        <logger name="org.apache.http.impl.client" level="INFO"/>
        <logger name="no.nav.security.token.support" level="INFO"/>

        <root level="INFO">
            <appender-ref ref="STDOUT_JSON"/>
        </root>
    </springProfile>

    <springProfile name="local">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <pattern>
                    %green(%d{HH:mm:ss}) %cyan([%-5.5t]) %boldCyan(%0.-5p) %yellow(%logger{36}) %cyan(:) %m%n
                </pattern>
            </layout>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
</configuration>